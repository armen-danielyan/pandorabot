<% include ./partials/header %>

<div class="row">

   <div class="col-md-3">
      <h2>Register</h2>
      <form method="post" action="/signup">
         <% if(typeof(errorMessage) !== 'undefined') {%>
         <span><%= errorMessage %></span>
         <% } %>
         <div class="form-group">
            <label for="username">username</label>
            <input class="form-control" type="text" name="username" id="username" placeholder="username" required="true"/>
         </div>

         <div class="form-group">
            <label for="password">password</label>
            <input class="form-control" type="password" name="password" id="password" placeholder="password" required="true"/>
         </div>

         <input class="btn btn-success" type="submit" name="signup" id="signup" value="register"/>
         <a href="/login/facebook" class="btn btn-primary">Connect with Facebook</a>
         <a href="/signin" title="sign in">sign in</a>

      </form>
   </div>

</div>

<% include ./partials/footer %>